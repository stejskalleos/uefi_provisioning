<network xmlns:dnsmasq='http://libvirt.org/schemas/network/dnsmasq/1.0'>
  <name>default</name>
  <uuid>64611ca6-f1cb-485b-a6bb-6d497852aa62</uuid>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='virbr0' zone='trusted' stp='on' delay='0'/>
  <mac address='52:54:00:54:df:f7'/>
  <dns>
    <host ip='192.168.122.1'>
      <hostname>foreman.coconut.loc</hostname>
    </host>
  </dns>
  <ip address='192.168.122.1' netmask='255.255.255.0'>
    <tftp root='/var/lib/tftpboot' />
    <!-- tftp root='/var/lib/tftpboot'/-->
    <dhcp>
      <range start='192.168.122.2' end='192.168.122.254'/>
      <!-- Pointing to not existing file will make the ipv4 PXE faster -->
      <bootp file='nope-not-existing'/>
      <!--bootp file='pxelinux.0'/-->
    </dhcp>
  </ip>
  <!-- Not existing IPv6 network will make the IPv6 provisioning faster -->
  <ip family='ipv6' address='2001:db8:dead:beef:fe::2' prefix='96'>
    <dhcp>
      <range start='2001:db8:dead:beef:fe::1000' end='2001:db8:dead:beef:fe::2000'/>
    </dhcp>
  </ip>
<dnsmasq:options>
  <!-- Set a tag for a specific MAC address -->
  <dnsmasq:option value='dhcp-host=CC:EE:55:77:00:09,set:host-centos9'/>
  <dnsmasq:option value='dhcp-host=00:AA:DE:B1:AA:12,set:host-debian12'/>

  <!-- Apply options based on the tag -->
  <dnsmasq:option value='dhcp-option-force=tag:host-centos9,60,HTTPClient'/>
  <dnsmasq:option value='dhcp-option-force=tag:host-debian12,60,HTTPClient'/>

  <!-- Serve a specific boot file to the host with the tagged MAC address -->
  <dnsmasq:option value='dhcp-boot=tag:host-centos9,http://192.168.122.1:8000/boot/centos_9/grubx64.efi'/>
  <dnsmasq:option value='dhcp-boot=tag:host-debian12,http://192.168.122.1:8000/boot/debian_12/grubx64.efi'/>
</dnsmasq:options>

</network>
